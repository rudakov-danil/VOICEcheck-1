# VOICEcheck Environment Variables
# Copy this file to .env and fill in the values

# ============================================================================
# DATABASE
# ============================================================================
# PostgreSQL credentials
POSTGRES_USER=voicecheck
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=voicecheck

# Database connection URL (auto-generated from above)
DATABASE_URL=postgresql://voicecheck:your_secure_password_here@localhost:5432/voicecheck

# Database port (for docker-compose)
DB_PORT=5434

# ============================================================================
# LLM API (z.ai)
# ============================================================================
# Your z.ai API key for LLM analysis
# Get it from: https://api.z.ai/
ZAI_API_KEY=your_zai_api_key_here

# Model to use (claude-3-5-sonnet, claude-3-haiku, etc.)
ZAI_MODEL=claude-3-5-sonnet

# Timeout for LLM API calls (seconds)
LLM_TIMEOUT=30

# ============================================================================
# DEEPGRAM (TRANSCRIPTION)
# ============================================================================
# Your Deepgram API key for audio transcription
# Get it from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Model to use: whisper, nova-2, nova-2-general, etc.
# whisper — compatible with original Whisper model
# nova-2 — Deepgram's best model (faster, more accurate)
DEEPGRAM_MODEL=whisper

# Default language: ru, en, auto (for auto-detection)
DEEPGRAM_LANGUAGE=ru

# Timeout for API calls (seconds) — large files may take time
DEEPGRAM_TIMEOUT=300

# Transcription cache size (in-memory LRU)
TRANSCRIPTION_CACHE_SIZE=100

# ============================================================================
# APPLICATION
# ============================================================================
# Application port (for docker-compose)
APP_PORT=8001

# Max file size for upload (bytes)
# 52428800 = 50MB
MAX_FILE_SIZE=52428800

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=.mp3,.wav,.m4a,.ogg,.flac,.mp4,.webm

# ============================================================================
# LOGGING
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# CORS
# ============================================================================
# Allowed origins for CORS (comma-separated)
# Use * for development, specific domains for production
ALLOWED_ORIGINS=http://localhost:8001,http://localhost:3000

# ============================================================================
# EXPORT
# ============================================================================
# Cache TTL for exported files (seconds)
# Default: 3600 (1 hour)
EXPORT_CACHE_TTL=3600

# ============================================================================
# DEVELOPMENT
# ============================================================================
# Alembic command for migrations
# Options: upgrade head, downgrade -1, etc.
ALEMBIC_CMD=upgrade head

# Enable debug mode (for development)
DEBUG=false

# Enable auto-reload (for development)
AUTO_RELOAD=false
