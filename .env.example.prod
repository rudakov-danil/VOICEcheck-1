# VOICEcheck Production Environment Variables
# Copy this file to .env and fill in the values

# ============================================================================
# DATABASE
# ============================================================================
# PostgreSQL credentials (use strong passwords!)
POSTGRES_USER=voicecheck_prod
POSTGRES_PASSWORD=your_strong_password_here
POSTGRES_DB=voicecheck_prod

# Database connection URL
DATABASE_URL=postgresql://voicecheck_prod:your_strong_password_here@localhost:5432/voicecheck_prod

# Database port
DB_PORT=5432

# ============================================================================
# LLM API (z.ai)
# ============================================================================
# Your z.ai API key for LLM analysis
ZAI_API_KEY=your_zai_api_key_here

# Model to use
ZAI_MODEL=claude-3-5-sonnet

# Timeout for LLM API calls (seconds)
LLM_TIMEOUT=30

# ============================================================================
# SPEAKER DIARIZATION
# ============================================================================
# HuggingFace token for pyannote.audio model
HF_TOKEN=your_huggingface_token_here

# ============================================================================
# WHISPER (TRANSCRIPTION)
# ============================================================================
# Whisper model size (recommended: tiny for production)
WHISPER_MODEL=tiny

# Device: cpu only for production
WHISPER_DEVICE=cpu

# ============================================================================
# APPLICATION
# ============================================================================
# Application port
APP_PORT=8000

# Max file size for upload (bytes)
MAX_FILE_SIZE=52428800

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=.mp3,.wav,.m4a,.ogg,.flac,.mp4,.webm

# Log level for production
LOG_LEVEL=WARNING

# Allowed origins for CORS (comma-separated, no * in production)
ALLOWED_ORIGINS=https://your-domain.com,https://api.your-domain.com

# Cache TTL for exported files (seconds)
EXPORT_CACHE_TTL=3600

# ============================================================================
# SECURITY
# ============================================================================
# Debug mode (false in production)
DEBUG=false

# Auto-reload (false in production)
AUTO_RELOAD=false

# SSL certificate paths (for HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ============================================================================
# PERFORMANCE
# ============================================================================
# Number of workers (recommendation: 2-4 per CPU core)
UVICORN_WORKERS=4

# Worker timeout (seconds)
UVICORN_TIMEOUT=60

# Maximum concurrent requests
UVICORN_MAX_CONCURRENCY=1000

# ============================================================================
# BACKUP
# ============================================================================
# Backup retention period (days)
BACKUP_RETENTION_DAYS=30

# Backup schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# ============================================================================
# MONITORING
# ============================================================================
# Monitoring endpoint for health checks
MONITORING_URL=https://your-monitoring-service.com

# Alert threshold (CPU usage %)
CPU_ALERT_THRESHOLD=80

# Alert threshold (memory usage %)
MEMORY_ALERT_THRESHOLD=80